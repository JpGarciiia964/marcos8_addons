<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="tss_hr_salary_rule_form" model="ir.ui.view">
            <field name="name">tss_hr_salary_rule_form</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
            <field name="arch" type="xml">

                <field name="appears_on_payslip" position="after">
                    <field name="tss_type"/>
                </field>

            </field>
        </record>

        <record id="marcos_view_hr_payslip_form" model="ir.ui.view">
            <field name="name">marcos_view_hr_payslip_form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='refund_sheet']" position="replace"/>
                <field name="credit_note" position="replace"/>
            </field>
        </record>

        <record id="marcos_view_hr_payslip_line_tree" model="ir.ui.view">
            <field name="name">marcos_view_hr_payslip_line_tree</field>
            <field name="model">hr.payslip.line</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_line_tree"/>
            <field name="arch" type="xml">
                <field name="rate" position="replace"/>
                <field name="quantity" position="replace"/>
            </field>
        </record>

        <record id="marcos_view_employee_form" model="ir.ui.view">
            <field name="name">marcos.hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <xpath expr="//h1" position="after">
                    <group>
                        <label for="PRIMER_APELLIDO" class="oe_edit_only"/>
                        <field name="PRIMER_APELLIDO" nolabel="1"/>
                        <label for="SEGUNDO_APELLIDO" class="oe_edit_only"/>
                        <field name="SEGUNDO_APELLIDO" nolabel="1"/>
                    </group>
                </xpath>

                <notebook>
                    <page string="TSS">
                        <group>
                            <field name="NUMERO_NOMINA"/>
                            <field name="TIPO_DE_DOCUMENTO"/>
                            <field name="NUMERO_DE_DOCUMENTO" required="1"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>


        <!-- Inherit Form View to Modify it -->
        <record id="do_view_hr_payslip_form" model="ir.ui.view">
            <field name="name">do_view_hr_payslip_form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">

                <field name="struct_id" position="after">
                    <field name="TIPO_INGRESO"/>
                </field>

            </field>
        </record>

    </data>
</openerp>